<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .chat-container {
            height: 100vh;
            max-height: 100vh;
        }
        
        .profile-section {
            height: 100vh;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }
        
        .chat-section {
            height: 100vh;
            display: flex;
        }
        
        .users-list {
            height: 100%;
            border-right: 1px solid #dee2e6;
        }
        
        .chat-interface {
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        
        .chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px;
        }
        
        .message {
            margin-bottom: 15px;
            max-width: 70%;
        }
        
        .message-sent {
            margin-left: auto;
            background-color: #007bff;
            color: white;
        }
        
        .message-received {
            margin-right: auto;
            background-color: #e9ecef;
        }
        
        .chat-input {
            padding: 20px;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }
        
        .user-item {
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .user-item:hover {
            background-color: #f8f9fa;
        }
        
        .user-status {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 5px;
        }
        
        .status-online {
            background-color: #28a745;
        }
        
        .status-offline {
            background-color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row chat-container">
            <!-- Profile Section -->
            <div class="col-1 profile-section p-0">
                <div class="d-flex flex-column align-items-center p-2">
                    <div class="mb-3">
                        <img src="https://via.placeholder.com/40" class="rounded-circle" alt="Profile">
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-comments fs-4"></i>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-users fs-4"></i>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-cog fs-4"></i>
                    </div>
                </div>
            </div>

            <!-- Chat Section -->
            <div class="col-11 chat-section p-0">
                <!-- Users List -->
                <div class="col-3 users-list">
                    <!-- Search Section -->
                    <div class="p-3 border-bottom">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search users...">
                            <button class="btn btn-outline-secondary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Users -->
                    <div class="overflow-auto h-100">
                        <div class="user-item p-3 border-bottom">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="User">
                                <div>
                                    <h6 class="mb-0">John Doe</h6>
                                    <small class="text-muted">
                                        <span class="user-status status-online"></span>
                                        Online
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="user-item p-3 border-bottom">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="User">
                                <div>
                                    <h6 class="mb-0">Jane Smith</h6>
                                    <small class="text-muted">
                                        <span class="user-status status-offline"></span>
                                        Offline
                                    </small>
                                </div>
                            </div>
                        </div>
                        <!-- Add more user items as needed -->
                    </div>
                </div>

                <!-- Chat Interface -->
                <div class="col-9 chat-interface">
                    <!-- Chat Header -->
                    <div class="p-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="User">
                            <div>
                                <h6 class="mb-0">John Doe</h6>
                                <small class="text-muted">Online</small>
                            </div>
                        </div>
                    </div>

                    <!-- Chat Messages -->
                    <div class="chat-messages">
                        <div class="message message-received p-3 rounded">
                            Hi, how are you?
                        </div>
                        <div class="message message-sent p-3 rounded">
                            I'm good, thanks! How about you?
                        </div>
                        <!-- Add more messages as needed -->
                    </div>

                    <!-- Chat Input -->
                    <div class="chat-input">
                        <div class="input-group">
                            <button class="btn btn-outline-secondary">
                                <i class="fas fa-paperclip"></i>
                            </button>
                            <input type="text" class="form-control" placeholder="Type a message...">
                            <button class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>